type Query {
  getInfo: Info!
  getWorks: [Work]!
}

input editInfo {
  name: String!
  job: String!
  desc: String!
  experience: String!
  telegram: String!
  github: String
}

type Mutation {
  editInfo(input: editInfo!): Info!
}

